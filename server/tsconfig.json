{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
      "target": "ES6",
    //   "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "typeRoots": [
        "./node_modules/@types"
    ]
    },
    "include": [
      "src/**/*.ts",
      "test/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  